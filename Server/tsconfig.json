{
  "compilerOptions": {
    "target": "es2016",  
    "rootDir": "./src",
    "outDir": "./dist", 
    "removeComments": true,                               
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                              
  },
  "include": ["src/**/*.ts"]
}
